ZippyGame:

<ZippyGame>:
<BaseMap>:
<ZipMeter>:
    #Turns out that using a layout is a better idea.
    #ZipMeter is a FloatLayout

    #Character HP/MP bar(s)

    Image:
        id:base
        source:'animation\effects\enbar_noback.png'
        pos_hint:{'x':.06,'y':.8}
        size_hint:.19,.19
        #Above values found with trial and error

    Image:
        id:hp
        keep_ratio:False
        allow_stretch:True
        pos_hint:{'x':.064,'y':.90}
        source:'animation\effects\hbar.png'
        size_hint:.180,.030
        #Above values found with trial and error

    Image:
        id:mp
        keep_ratio:False
        allow_stretch:True
        pos_hint:{'x':.064,'y':.86}
        source:'animation\effects\mpbar.png'
        size_hint:.180,.030
        #Above values found with trial and error

<Player_Sprite>:
    canvas.before:
        PushMatrix
        Rotate:
            angle: self.bearing if self.zipping == True else 0
            origin: self.center
    canvas:

    canvas.after:
        PopMatrix







