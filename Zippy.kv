ZippyGame:

<ZippyGame>:

<BaseMap>:

<ZipMeter>:
    Image:
        id:base
        source:'animation\effects\enbar_noback.png'
        pos:20,root.height-self.height

    Image:
        id:hp
        pos:base.x+3,base.y+10
        source:'animation\effects\hbar.png'

    Image:
        id:mp
        pos:hp.x, hp.y - 15
        source:'animation\effects\mpbar.png'


<Player_Sprite>:
    canvas.before:
        PushMatrix
        Rotate:
            angle: self.bearing if self.zipping == True else 0
            origin: self.center
    canvas:

    canvas.after:
        PopMatrix







