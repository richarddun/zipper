ZippyGame:

<BaseMap>:

<ZipMeter>:
    pos:500,500
    canvas:
        Color:
            rgba: 0,1,0,.3
        Rectangle:
            size:self.size
            pos: self.pos

<Player_Sprite>:
    canvas.before:
        PushMatrix
        Rotate:
            angle: self.bearing if self.zipping == True else 0
            origin: self.center
    canvas:

    canvas.after:
        PopMatrix







